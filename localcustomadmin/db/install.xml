<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/localcustomadmin/db" VERSION="2025101802" COMMENT="XMLDB file for local_localcustomadmin plugin">
    <TABLES>
        <TABLE NAME="local_customadmin_category_prices" COMMENT="Table to store course category prices">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
                <FIELD NAME="categoryid" TYPE="int" LENGTH="10" NOTNULL="true" />
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" />
                <FIELD NAME="price" TYPE="float" NOTNULL="true" />
                <FIELD NAME="startdate" TYPE="int" LENGTH="10" NOTNULL="true" />
                <FIELD NAME="enddate" TYPE="int" LENGTH="10" NOTNULL="true" />
                <FIELD NAME="ispromotional" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" />
                <FIELD NAME="isenrollmentfee" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" />
                <FIELD NAME="status" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" COMMENT="0 = Inactive, 1 = Active" />
                <FIELD NAME="scheduledtask" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" COMMENT="0 = No, 1 = Yes" />
                <FIELD NAME="installments" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="0" COMMENT="Number of payment installments" />
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" />
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" />
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
                <KEY NAME="categoryid" TYPE="foreign" FIELDS="categoryid" REFTABLE="course_categories" REFFIELDS="id" />
            </KEYS>
            <INDEXES>
                <INDEX NAME="categoryid_idx" UNIQUE="false" FIELDS="categoryid" />
                <INDEX NAME="status_idx" UNIQUE="false" FIELDS="status" />
            </INDEXES>
        </TABLE>
        <TABLE NAME="local_customadmin_wp_mapping" COMMENT="Table to store mappings between Moodle items and WordPress items">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" />
                <FIELD NAME="moodle_type" TYPE="char" LENGTH="50" NOTNULL="true" COMMENT="Type of Moodle item: category, course" />
                <FIELD NAME="moodle_id" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="ID of the Moodle item" />
                <FIELD NAME="wordpress_type" TYPE="char" LENGTH="50" NOTNULL="true" COMMENT="Type of WordPress item: term, post" />
                <FIELD NAME="wordpress_id" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="ID of the WordPress item" />
                <FIELD NAME="wordpress_taxonomy" TYPE="char" LENGTH="100" NOTNULL="false" COMMENT="WordPress taxonomy name (for terms)" />
                <FIELD NAME="wordpress_post_type" TYPE="char" LENGTH="100" NOTNULL="false" COMMENT="WordPress post type (for posts)" />
                <FIELD NAME="sync_status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="pending" COMMENT="Sync status: pending, synced, error" />
                <FIELD NAME="last_synced" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" COMMENT="Timestamp of last sync" />
                <FIELD NAME="sync_error" TYPE="text" NOTNULL="false" COMMENT="Error message if sync failed" />
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" />
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" />
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" />
            </KEYS>
            <INDEXES>
                <INDEX NAME="moodle_item_idx" UNIQUE="true" FIELDS="moodle_type, moodle_id" />
                <INDEX NAME="wordpress_item_idx" UNIQUE="false" FIELDS="wordpress_type, wordpress_id" />
                <INDEX NAME="sync_status_idx" UNIQUE="false" FIELDS="sync_status" />
                <INDEX NAME="moodle_type_idx" UNIQUE="false" FIELDS="moodle_type" />
            </INDEXES>
        </TABLE>
    </TABLES>
</XMLDB>
