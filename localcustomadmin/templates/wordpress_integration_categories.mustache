{{!
    @template local_localcustomadmin/wordpress_integration

    WordPress Integration page template.

    Context variables required for this template:
    * statistics - Array of statistics objects
    * wordpress_info - WordPress connection information
    * actions - Array of action objects
    * categories - Array of category objects
    * back_to_index_url - URL to go back to index
    * last_sync - Last synchronization time
    * has_manage_capability - Boolean for manage capability

    Example context (json):
    {
        "statistics": [
            {
                "title": "Total Categories",
                "value": 15,
                "icon": "fa-sitemap",
                "variant": "info"
            }
        ],
        "wordpress_info": {
            "endpoint": "https://example.com/wp-json/wp/v2",
            "connected": true,
            "taxonomy": "niveis"
        },
        "actions": [
            {
                "title": "Sync Categories",
                "description": "Send all categories to WordPress",
                "url": "#",
                "icon": "fa-sync",
                "variant": "primary",
                "action": "sync-categories"
            }
        ],
        "categories": [],
        "back_to_index_url": "/local/localcustomadmin/index.php",
        "last_sync": "Never synced",
        "has_manage_capability": true
    }
}}

<div class="container-fluid mt-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="fa fa-wordpress mr-2 text-primary"></i>
                {{#str}}wordpress_integration, local_localcustomadmin{{/str}}
            </h2>
            <p class="text-muted mb-0">
                {{#str}}wordpress_integration_desc, local_localcustomadmin{{/str}}
            </p>
        </div>
        <a href="{{back_to_index_url}}" class="btn btn-outline-secondary">
            <i class="fa fa-arrow-left mr-1"></i>
            {{#str}}back, local_localcustomadmin{{/str}}
        </a>
    </div>

    <!-- WordPress Connection Info -->
    <div class="alert alert-{{#wordpress_info.connected}}success{{/wordpress_info.connected}}{{^wordpress_info.connected}}danger{{/wordpress_info.connected}} mb-4">
        <div class="d-flex align-items-center">
            <i class="fa fa-{{#wordpress_info.connected}}check-circle{{/wordpress_info.connected}}{{^wordpress_info.connected}}exclamation-circle{{/wordpress_info.connected}} fa-2x mr-3"></i>
            <div>
                <strong>{{#str}}wordpress_endpoint, local_localcustomadmin{{/str}}:</strong> {{wordpress_info.endpoint}}
                <br>
                <strong>{{#str}}wordpress_integration, local_localcustomadmin{{/str}}:</strong> {{wordpress_info.taxonomy}}
                <br>
                <small class="text-muted">{{#str}}wordpress_integration_desc, local_localcustomadmin{{/str}}: {{last_sync}}</small>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm h-100 border-info">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-info text-white p-3 mr-3">
                            <i class="fa fa-sitemap fa-2x"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">{{#str}}total_categories, local_localcustomadmin{{/str}}</h6>
                            <h3 class="mb-0 font-weight-bold" data-stat="total">{{statistics.0.value}}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm h-100 border-success">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-success text-white p-3 mr-3">
                            <i class="fa fa-check-circle fa-2x"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">{{#str}}synced_categories, local_localcustomadmin{{/str}}</h6>
                            <h3 class="mb-0 font-weight-bold" data-stat="synced">{{statistics.1.value}}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm h-100 border-warning">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-warning text-white p-3 mr-3">
                            <i class="fa fa-clock fa-2x"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">{{#str}}pending_categories, local_localcustomadmin{{/str}}</h6>
                            <h3 class="mb-0 font-weight-bold" data-stat="pending">{{statistics.2.value}}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{#has_manage_capability}}
    <!-- Quick Actions -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fa fa-bolt mr-2"></i>
                {{#str}}actions, local_localcustomadmin{{/str}}
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                {{#actions}}
                <div class="col-md-4 mb-3">
                    <div class="card h-100 border-{{variant}}">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="fa {{icon}} fa-3x text-{{variant}}"></i>
                            </div>
                            <h5 class="card-title">{{title}}</h5>
                            <p class="card-text text-muted">{{description}}</p>
                            <button type="button" class="btn btn-{{variant}}" data-action="{{action}}">
                                <i class="fa {{icon}} mr-1"></i>
                                {{title}}
                            </button>
                        </div>
                    </div>
                </div>
                {{/actions}}
            </div>
        </div>
    </div>
    {{/has_manage_capability}}

    <!-- Recent Categories -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fa fa-sitemap mr-2"></i>
                {{#str}}recent_categories, local_localcustomadmin{{/str}}
            </h5>
        </div>
        <div class="card-body">
            {{#categories.0}}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>{{#str}}categoryname, local_localcustomadmin{{/str}}</th>
                            <th>{{#str}}courses, core{{/str}}</th>
                            <th>{{#str}}status, core{{/str}}</th>
                            <th>{{#str}}actions, local_localcustomadmin{{/str}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#categories}}
                        <tr>
                            <td>
                                <strong>{{name}}</strong>
                            </td>
                            <td>
                                <span class="badge badge-secondary">{{coursecount}}</span>
                            </td>
                            <td>
                                <span class="badge badge-{{sync_status_class}}">
                                    {{sync_status_text}}
                                </span>
                            </td>
                            <td>
                                <a href="{{categoryurl}}" class="btn btn-sm btn-outline-primary mr-1">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a href="{{editurl}}" class="btn btn-sm btn-outline-secondary">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        {{/categories}}
                    </tbody>
                </table>
            </div>
            {{/categories.0}}
            {{^categories.0}}
            <div class="alert alert-info text-center">
                <i class="fa fa-info-circle fa-2x mb-2"></i>
                <p class="mb-0">{{#str}}no_categories_found, local_localcustomadmin{{/str}}</p>
            </div>
            {{/categories.0}}
        </div>
    </div>
</div>

<style>
.action-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    cursor: pointer;
}

.action-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}
</style>
