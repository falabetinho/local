<div class="container-fluid mt-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="fa fa-wordpress mr-2 text-primary"></i>
                {{title}}
            </h2>
            <p class="text-muted mb-0">{{description}}</p>
        </div>
        <a href="{{back_to_index_url}}" class="btn btn-outline-secondary">
            <i class="fa fa-arrow-left mr-1"></i>
            {{#str}}back, local_localcustomadmin{{/str}}
        </a>
    </div>

    <!-- Integration Statistics -->
    <div class="row mb-4">
        {{#statistics}}
        <div class="col-md-4">
            <div class="card text-white bg-{{variant}} shadow-sm">
                <div class="card-body text-center">
                    <i class="fa {{icon}} fa-3x mb-3"></i>
                    <h5 class="card-title">{{title}}</h5>
                    <h3 class="card-text">{{value}}</h3>
                </div>
            </div>
        </div>
        {{/statistics}}
    </div>

    <!-- Integration Options -->
    <div class="row">
        {{#cards}}
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow-sm h-100 border-{{variant}}">
                <div class="card-body text-center">
                    <i class="fa {{icon}} fa-3x text-{{variant}} mb-3"></i>
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text text-muted">{{description}}</p>
                    <a href="{{url}}" class="btn btn-{{variant}} btn-block">
                        <i class="fa fa-arrow-right mr-1"></i>
                        {{#str}}manage, local_localcustomadmin{{/str}}
                    </a>
                </div>
            </div>
        </div>
        {{/cards}}
    </div>

    <!-- Help Section -->
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fa fa-info-circle mr-2"></i>
                {{#str}}help, core{{/str}}
            </h5>
        </div>
        <div class="card-body">
            <h6>{{#str}}wordpress_integration_help_title, local_localcustomadmin{{/str}}</h6>
            <ul>
                <li>{{#str}}wordpress_integration_help_1, local_localcustomadmin{{/str}}</li>
                <li>{{#str}}wordpress_integration_help_2, local_localcustomadmin{{/str}}</li>
                <li>{{#str}}wordpress_integration_help_3, local_localcustomadmin{{/str}}</li>
            </ul>
        </div>
    </div>
</div>