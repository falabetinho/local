{{!
    @template local_localcustomadmin/wordpress_integration

    WordPress Integration main page template.

    Context variables required for this template:
    * wordpress_info - WordPress connection information
    * integration_options - Array of integration option objects
    * back_to_index_url - URL to go back to index
    * has_manage_capability - Boolean for manage capability

    Example context (json):
    {
        "wordpress_info": {
            "endpoint": "https://example.com/wp-json/wp/v2",
            "connected": true
        },
        "integration_options": [
            {
                "title": "Sync Categories",
                "description": "Synchronize Moodle categories with WordPress",
                "url": "/wordpress_integration_categories.php",
                "icon": "fa-sitemap",
                "variant": "primary",
                "stats": {
                    "label": "Total Categories",
                    "value": 15
                }
            }
        ],
        "back_to_index_url": "/local/localcustomadmin/index.php",
        "has_manage_capability": true
    }
}}

<div class="container-fluid mt-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="fa fa-wordpress mr-2 text-primary"></i>
                {{#str}}wordpress_integration, local_localcustomadmin{{/str}}
            </h2>
            <p class="text-muted mb-0">
                {{#str}}wordpress_integration_desc, local_localcustomadmin{{/str}}
            </p>
        </div>
        <a href="{{back_to_index_url}}" class="btn btn-outline-secondary">
            <i class="fa fa-arrow-left mr-1"></i>
            {{#str}}back, local_localcustomadmin{{/str}}
        </a>
    </div>

    <!-- WordPress Connection Info -->
    <div class="alert alert-{{#wordpress_info.connected}}success{{/wordpress_info.connected}}{{^wordpress_info.connected}}danger{{/wordpress_info.connected}} mb-4">
        <div class="d-flex align-items-center">
            <i class="fa fa-{{#wordpress_info.connected}}check-circle{{/wordpress_info.connected}}{{^wordpress_info.connected}}exclamation-circle{{/wordpress_info.connected}} fa-2x mr-3"></i>
            <div>
                <strong>{{#str}}wordpress_endpoint, local_localcustomadmin{{/str}}:</strong> {{wordpress_info.endpoint}}
                <br>
                <small class="text-muted">
                    {{#wordpress_info.connected}}
                    {{#str}}connection_active, local_localcustomadmin{{/str}}
                    {{/wordpress_info.connected}}
                    {{^wordpress_info.connected}}
                    {{#str}}connection_failed, local_localcustomadmin{{/str}}
                    {{/wordpress_info.connected}}
                </small>
            </div>
        </div>
    </div>

    <!-- Integration Options -->
    {{#has_manage_capability}}
    <div class="row">
        {{#integration_options}}
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100 border-{{variant}} integration-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h4 class="card-title mb-2">
                                <i class="fa {{icon}} text-{{variant}} mr-2"></i>
                                {{title}}
                            </h4>
                            <p class="card-text text-muted mb-0">{{description}}</p>
                        </div>
                    </div>
                    
                    <div class="bg-light p-3 rounded mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">{{stats.label}}</span>
                            <h3 class="mb-0 text-{{variant}}">{{stats.value}}</h3>
                        </div>
                    </div>
                    
                    <a href="{{url}}" class="btn btn-{{variant}} btn-block">
                        <i class="fa fa-arrow-right mr-1"></i>
                        {{#str}}manage, core{{/str}}
                    </a>
                </div>
            </div>
        </div>
        {{/integration_options}}
    </div>
    {{/has_manage_capability}}

    <!-- Help Section -->
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fa fa-info-circle mr-2"></i>
                {{#str}}help, core{{/str}}
            </h5>
        </div>
        <div class="card-body">
            <h6>{{#str}}wordpress_integration_help_title, local_localcustomadmin{{/str}}</h6>
            <ul>
                <li>{{#str}}wordpress_integration_help_1, local_localcustomadmin{{/str}}</li>
                <li>{{#str}}wordpress_integration_help_2, local_localcustomadmin{{/str}}</li>
                <li>{{#str}}wordpress_integration_help_3, local_localcustomadmin{{/str}}</li>
            </ul>
        </div>
    </div>
</div>

<style>
.integration-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

.integration-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 20px rgba(0,0,0,0.15);
}
</style>
