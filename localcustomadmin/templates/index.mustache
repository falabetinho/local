<div class="local-customadmin-index">
    <div class="mb-4">
        <p class="lead text-muted">Gerenciamento das funções base para Instituto Educacional Maris &copy;.</p>
    </div>
    
    <div class="row">
        {{#cards}}
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    {{#icon}}
                    <div class="text-center mb-3">
                        <i class="fa {{icon}} fa-3x{{^icon_color}} text-primary{{/icon_color}}" {{#icon_color}}style="color: {{icon_color}};"{{/icon_color}}></i>
                    </div>
                    {{/icon}}
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text flex-grow-1">{{description}}</p>
                    <div class="mt-auto">
                        <a href="{{url}}" class="btn btn-primary btn-block">
                            {{btntext}}
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {{/cards}}
    </div>
    
    {{#no_cards}}
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle me-2"></i>
        No administrative tools are currently available for your user role.
    </div>
    {{/no_cards}}
</div>