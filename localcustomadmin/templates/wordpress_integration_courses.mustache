{{!
    @template local_localcustomadmin/wordpress_integration_courses

    WordPress Integration courses sync page template.

    Context variables required for this template:
    * statistics - Array of statistics objects
    * wordpress_info - WordPress connection information
    * actions - Array of action objects
    * courses - Array of course objects
    * back_to_integration_url - URL to go back to integration main page
    * back_to_index_url - URL to go back to index
    * last_sync - Last synchronization time
    * has_manage_capability - Boolean for manage capability

    Example context (json):
    {
        "statistics": [
            {
                "title": "Total Courses",
                "value": 25,
                "icon": "fa-graduation-cap",
                "variant": "info"
            }
        ],
        "wordpress_info": {
            "endpoint": "https://example.com/wp-json/wp/v2",
            "connected": true,
            "post_type": "curso"
        },
        "actions": [
            {
                "title": "Sync Courses",
                "description": "Send all courses to WordPress",
                "url": "#",
                "icon": "fa-sync",
                "variant": "primary",
                "action": "sync-courses"
            }
        ],
        "courses": [],
        "back_to_integration_url": "/local/localcustomadmin/wordpress_integration.php",
        "back_to_index_url": "/local/localcustomadmin/index.php",
        "last_sync": "Never synced",
        "has_manage_capability": true
    }
}}

<div class="container-fluid mt-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="fa fa-graduation-cap mr-2 text-success"></i>
                {{#str}}sync_courses_title, local_localcustomadmin{{/str}}
            </h2>
            <p class="text-muted mb-0">
                {{#str}}sync_courses_title_desc, local_localcustomadmin{{/str}}
            </p>
        </div>
        <div>
            <a href="{{back_to_integration_url}}" class="btn btn-outline-secondary mr-2">
                <i class="fa fa-arrow-left mr-1"></i>
                {{#str}}wordpress_integration, local_localcustomadmin{{/str}}
            </a>
            <a href="{{back_to_index_url}}" class="btn btn-outline-secondary">
                <i class="fa fa-home mr-1"></i>
                {{#str}}back, local_localcustomadmin{{/str}}
            </a>
        </div>
    </div>

    <!-- WordPress Connection Info -->
    <div class="alert alert-{{#wordpress_info.connected}}success{{/wordpress_info.connected}}{{^wordpress_info.connected}}danger{{/wordpress_info.connected}} mb-4">
        <div class="d-flex align-items-center">
            <i class="fa fa-{{#wordpress_info.connected}}check-circle{{/wordpress_info.connected}}{{^wordpress_info.connected}}exclamation-circle{{/wordpress_info.connected}} fa-2x mr-3"></i>
            <div>
                <strong>{{#str}}wordpress_endpoint, local_localcustomadmin{{/str}}:</strong> {{wordpress_info.endpoint}}
                <br>
                <strong>Post Type:</strong> {{wordpress_info.post_type}}
                <br>
                <small class="text-muted">{{#str}}wordpress_integration_desc, local_localcustomadmin{{/str}}: {{last_sync}}</small>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        {{#statistics}}
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm h-100 border-{{variant}}">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-{{variant}} text-white p-3 mr-3">
                            <i class="fa {{icon}} fa-2x"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">{{title}}</h6>
                            <h3 class="mb-0 font-weight-bold">{{value}}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/statistics}}
    </div>

    {{#has_manage_capability}}
    <!-- Quick Actions -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fa fa-bolt mr-2"></i>
                {{#str}}actions, local_localcustomadmin{{/str}}
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                {{#actions}}
                <div class="col-md-4 mb-3">
                    <div class="card h-100 border-{{variant}} action-card" data-action="{{action}}">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="fa {{icon}} fa-3x text-{{variant}}"></i>
                            </div>
                            <h5 class="card-title">{{title}}</h5>
                            <p class="card-text text-muted">{{description}}</p>
                            <a href="{{url}}" class="btn btn-{{variant}} stretched-link">
                                {{title}}
                            </a>
                        </div>
                    </div>
                </div>
                {{/actions}}
            </div>
        </div>
    </div>
    {{/has_manage_capability}}

    <!-- Recent Courses -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fa fa-graduation-cap mr-2"></i>
                {{#str}}recent_courses, local_localcustomadmin{{/str}}
            </h5>
        </div>
        <div class="card-body">
            {{#courses.0}}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>{{#str}}course, core{{/str}}</th>
                            <th>{{#str}}shortname, core{{/str}}</th>
                            <th>{{#str}}visibility, core{{/str}}</th>
                            <th>{{#str}}status, core{{/str}}</th>
                            <th>{{#str}}actions, local_localcustomadmin{{/str}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#courses}}
                        <tr>
                            <td>
                                <strong>{{fullname}}</strong>
                            </td>
                            <td>
                                <span class="badge badge-info">{{shortname}}</span>
                            </td>
                            <td>
                                <span class="badge badge-{{visibility_class}}">
                                    {{visibility_text}}
                                </span>
                            </td>
                            <td>
                                <span class="badge badge-{{sync_status_class}}">
                                    {{sync_status_text}}
                                </span>
                            </td>
                            <td>
                                <a href="{{courseurl}}" class="btn btn-sm btn-outline-primary mr-1" title="{{#str}}view, core{{/str}}">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a href="{{editurl}}" class="btn btn-sm btn-outline-secondary" title="{{#str}}edit, core{{/str}}">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        {{/courses}}
                    </tbody>
                </table>
            </div>
            {{/courses.0}}
            {{^courses.0}}
            <div class="alert alert-info text-center">
                <i class="fa fa-info-circle fa-2x mb-2"></i>
                <p class="mb-0">{{#str}}no_courses_found, local_localcustomadmin{{/str}}</p>
            </div>
            {{/courses.0}}
        </div>
    </div>
</div>

<style>
.action-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    cursor: pointer;
}

.action-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}
</style>
