<div class="local-customadmin-categories">
    <div class="mb-4">
        <p class="lead text-muted">{{page_description}}</p>
    </div>
    
    <!-- Add Category Button -->
    <div class="mb-4">
        <a href="{{add_category_url}}" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>{{add_category_text}}
        </a>
    </div>
    
    {{#has_categories}}
    <!-- Categories Accordion -->
    <div class="mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0">
                    <i class="fas fa-sitemap me-2"></i>Navegação Hierárquica
                </h6>
                <div>
                    <button class="btn btn-sm btn-outline-primary" type="button" id="expandAllBtn">
                        <i class="fas fa-expand-arrows-alt"></i> Expandir Tudo
                    </button>
                    <button class="btn btn-sm btn-outline-secondary" type="button" id="collapseAllBtn">
                        <i class="fas fa-compress-arrows-alt"></i> Colapsar Tudo
                    </button>
                </div>
            </div>
            <div class="accordion accordion-flush" id="categoriesAccordion">
                {{#categories}}
                {{#is_root}}
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading{{id}}">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                                data-bs-target="#collapse{{id}}" aria-expanded="false" aria-controls="collapse{{id}}">
                            <div class="d-flex justify-content-between w-100 me-3">
                                <span class="fw-bold text-primary">
                                    <i class="fas fa-folder me-2"></i>
                                    <span class="badge bg-secondary me-2">ID: {{id}}</span>
                                    {{name}}
                                </span>
                                <div class="text-muted small">
                                    <span class="badge bg-info me-1">{{courses_count}} cursos</span>
                                    <span class="badge bg-warning">{{subcategories_count}} subcategorias</span>
                                </div>
                            </div>
                        </button>
                    </h2>
                    <div id="collapse{{id}}" class="accordion-collapse collapse" 
                         aria-labelledby="heading{{id}}" data-bs-parent="#categoriesAccordion">
                        <div class="accordion-body p-3">
                            <div class="row mb-3">
                                <div class="col-md-8">
                                    <h6 class="text-primary mb-1">
                                        <i class="fas fa-folder-open me-2"></i>{{name}}
                                    </h6>
                                    <p class="text-muted small mb-2">ID da Categoria: <span class="badge bg-secondary">{{id}}</span></p>
                                    <div class="d-flex gap-2">
                                        <span class="badge bg-info">
                                            <i class="fas fa-book me-1"></i>{{courses_count}} Curso(s)
                                        </span>
                                        <span class="badge bg-warning">
                                            <i class="fas fa-sitemap me-1"></i>{{subcategories_count}} Subcategoria(s)
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-4 text-end">
                                    <a href="{{edit_url}}" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-edit me-1"></i>Editar Categoria
                                    </a>
                                </div>
                            </div>
                            
                            {{#subcategories_count}}
                            <hr class="my-3">
                            <h6 class="text-muted mb-2">
                                <i class="fas fa-layer-group me-2"></i>Subcategorias
                            </h6>
                            <!-- Subcategorias aqui serão listadas pelo JavaScript -->
                            <div id="subcategories{{id}}" class="subcategories-list"></div>
                            {{/subcategories_count}}
                        </div>
                    </div>
                </div>
                {{/is_root}}
                {{/categories}}
            </div>
        </div>
    </div>
    {{/has_categories}}
    

    
    {{^has_categories}}
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle me-2"></i>
        Nenhuma categoria de curso foi encontrada. 
        <a href="{{add_category_url}}" class="alert-link">Criar primeira categoria</a>
    </div>
    {{/has_categories}}
    
    <!-- Back to Courses Button -->
    <div class="mt-4">
        <a href="{{back_to_courses_url}}" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>{{back_to_courses_text}}
        </a>
    </div>
</div>

{{#has_categories}}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Accordion functionality
    const expandAllBtn = document.getElementById('expandAllBtn');
    const collapseAllBtn = document.getElementById('collapseAllBtn');
    const accordionItems = document.querySelectorAll('.accordion-collapse');
    
    // Build categories hierarchy for accordion
    const categories = {
        {{#categories}}
        {{id}}: {
            id: {{id}},
            name: "{{name}}",
            parent: {{parent_id}},
            isRoot: {{#is_root}}true{{/is_root}}{{^is_root}}false{{/is_root}},
            courses: {{courses_count}},
            subcategories: {{subcategories_count}},
            editUrl: "{{edit_url}}"
        }{{^is_last}},{{/is_last}}
        {{/categories}}
    };
    
    // Populate subcategories in accordion
    Object.values(categories).forEach(category => {
        if (category.isRoot && category.subcategories > 0) {
            const subcategoriesDiv = document.getElementById('subcategories' + category.id);
            if (subcategoriesDiv) {
                let subcategoriesHtml = '<div class="ms-3">';
                
                Object.values(categories).forEach(subcat => {
                    if (subcat.parent === category.id) {
                        subcategoriesHtml += `
                            <div class="card border-0 bg-light mb-2">
                                <div class="card-body p-2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1 text-dark">
                                                <i class="fas fa-folder me-2 text-muted"></i>
                                                <span class="badge bg-secondary me-2">ID: ${subcat.id}</span>
                                                ${subcat.name}
                                            </h6>
                                            <div class="small text-muted">
                                                <span class="badge bg-info me-1">
                                                    <i class="fas fa-book me-1"></i>${subcat.courses} curso(s)
                                                </span>
                                            </div>
                                        </div>
                                        <div>
                                            <a href="${subcat.editUrl}" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit me-1"></i>Editar
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `;
                    }
                });
                
                subcategoriesHtml += '</div>';
                subcategoriesDiv.innerHTML = subcategoriesHtml;
            }
        }
    });
    
    // Expand all functionality
    if (expandAllBtn) {
        expandAllBtn.addEventListener('click', function() {
            accordionItems.forEach(item => {
                if (!item.classList.contains('show')) {
                    const button = document.querySelector(`[data-bs-target="#${item.id}"]`);
                    if (button) {
                        button.click();
                    }
                }
            });
        });
    }
    
    // Collapse all functionality
    if (collapseAllBtn) {
        collapseAllBtn.addEventListener('click', function() {
            accordionItems.forEach(item => {
                if (item.classList.contains('show')) {
                    const button = document.querySelector(`[data-bs-target="#${item.id}"]`);
                    if (button) {
                        button.click();
                    }
                }
            });
        });
    }
    

});
</script>
{{/has_categories}}

