<!-- Elegant Courses Management Interface -->
<div class="elegant-courses-container">
    
    <!-- Hero Header with Gradient -->
    <div class="hero-header">
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="hero-title">
                    <i class="fas fa-graduation-cap hero-icon"></i>
                    Gerenciamento de Cursos
                </h1>
                <p class="hero-subtitle">
                    Gerencie e monitore seus cursos em um painel centralizado
                </p>
            </div>
            
            {{#statistics}}
            <div class="hero-stats">
                {{#.}}
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas {{icon}}"></i>
                    </div>
                    <div class="stat-content">
                        <span class="stat-number">{{value}}</span>
                        <span class="stat-label">{{title}}</span>
                    </div>
                </div>
                {{/.}}
            </div>
            {{/statistics}}
        </div>
    </div>

    <!-- Elegant Action Bar -->
    {{#has_manage_capability}}
    <div class="elegant-action-bar">
        <div class="action-left">
            <div class="action-title">
                <i class="fas fa-bolt mr-2"></i>
                <span>Ações Rápidas</span>
            </div>
        </div>
        <div class="action-right">
            <a href="{{add_course_url}}" class="btn-elegant btn-primary">
                <span class="btn-icon">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="btn-text">Novo Curso</span>
            </a>
        </div>
    </div>

    <!-- Quick Actions Cards -->
    <div class="elegant-actions-grid">
        {{#actions}}
        <div class="action-card">
            <div class="action-card-icon icon-{{variant}}">
                <i class="fas {{icon}}"></i>
            </div>
            <div class="action-card-content">
                <h4 class="action-card-title">{{title}}</h4>
                <p class="action-card-description">{{description}}</p>
            </div>
            <a href="{{url}}" class="action-card-link">
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>
        {{/actions}}
    </div>
    {{/has_manage_capability}}

    <!-- Elegant Courses List -->
    <div class="elegant-courses-section">
        <div class="courses-header">
            <h3 class="courses-title">
                <i class="fas fa-book-open mr-2"></i>
                Cursos Populares
            </h3>
        </div>
        
        {{#courses}}
        <div class="elegant-course-card">
            <div class="course-card-main">
                <div class="course-info">
                    <div class="course-icon">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <div class="course-details">
                        <h4 class="course-name">
                            <a href="{{courseurl}}">{{fullname}}</a>
                        </h4>
                        <p class="course-shortname">
                            <i class="fas fa-tag mr-2"></i>
                            <strong>Código:</strong> {{shortname}}
                        </p>
                    </div>
                </div>
                
                <div class="course-meta">
                    <div class="course-stat">
                        <div class="stat-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="stat-info">
                            <span class="stat-value">{{enrollments}}</span>
                            <span class="stat-label">Alunos</span>
                        </div>
                    </div>
                    
                    <div class="course-status">
                        <span class="status-badge status-{{status_class}}">
                            <i class="fas fa-circle mr-2"></i>
                            {{status_text}}
                        </span>
                    </div>
                </div>
            </div>
            
            <div class="course-actions">
                {{#has_manage_capability}}
                <a href="{{editurl}}" class="btn-action btn-action-edit" title="Editar">
                    <i class="fas fa-edit"></i>
                </a>
                <a href="{{courseurl}}" class="btn-action btn-action-view" title="Visualizar">
                    <i class="fas fa-eye"></i>
                </a>
                {{/has_manage_capability}}
                {{^has_manage_capability}}
                <a href="{{courseurl}}" class="btn-action btn-action-view" title="Visualizar">
                    <i class="fas fa-eye"></i>
                </a>
                {{/has_manage_capability}}
            </div>
        </div>
        {{/courses}}
        
        {{^courses}}
        <div class="elegant-empty-state">
            <h3 class="empty-title">Nenhum curso encontrado</h3>
            <p class="empty-description">Comece criando seu primeiro curso</p>
            {{#has_manage_capability}}
            <a href="{{add_course_url}}" class="btn-elegant btn-primary btn-large">
                <span class="btn-icon">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="btn-text">Criar Primeiro Curso</span>
            </a>
            {{/has_manage_capability}}
        </div>
        {{/courses}}
    </div>

    <!-- Elegant Footer -->
    <div class="elegant-footer">
        <div class="footer-grid">
            <div class="footer-section">
                <h4 class="footer-section-title">
                    <i class="fas fa-lightbulb mr-2"></i>
                    Dicas
                </h4>
                <ul class="footer-list">
                    <li><i class="fas fa-check mr-2"></i>Use categorias para organizar seus cursos</li>
                    <li><i class="fas fa-check mr-2"></i>Faça backups regulares do conteúdo</li>
                    <li><i class="fas fa-check mr-2"></i>Monitore estatísticas de matrícula</li>
                </ul>
            </div>
            <div class="footer-section">
                <h4 class="footer-section-title">
                    <i class="fas fa-link mr-2"></i>
                    Links Relacionados
                </h4>
                <ul class="footer-list">
                    <li><a href="/course/management.php"><i class="fas fa-arrow-right mr-2"></i>Gerenciar Cursos e Categorias</a></li>
                    <li><a href="/course/index.php"><i class="fas fa-arrow-right mr-2"></i>Navegar Todos os Cursos</a></li>
                    <li><a href="/backup/restorefile.php"><i class="fas fa-arrow-right mr-2"></i>Restaurar Cursos</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>