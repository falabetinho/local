<div class="local-customadmin-cursos">
    <div class="mb-4">
        <p class="lead text-muted">Manage and monitor your Moodle courses from this centralized dashboard.</p>
    </div>
    
    <!-- Statistics Section -->
    <div class="row mb-5">
        {{#statistics}}
        <div class="col-md-4 mb-3">
            <div class="card border-{{variant}}">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas {{icon}} fa-3x text-{{variant}}"></i>
                    </div>
                    <h3 class="card-title text-{{variant}} mb-1">{{value}}</h3>
                    <p class="card-text text-muted">{{title}}</p>
                </div>
            </div>
        </div>
        {{/statistics}}
    </div>

    <!-- Quick Actions Section -->
    {{#has_manage_capability}}
    <div class="mb-5">
        <h3 class="mb-3">
            <i class="fas fa-bolt text-warning me-2"></i>
            Quick Actions
        </h3>
        <div class="row">
            {{#actions}}
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="fas {{icon}} fa-2x text-{{variant}}"></i>
                        </div>
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text text-muted">{{description}}</p>
                        <a href="{{url}}" class="btn btn-{{variant}} btn-sm">
                            <i class="fas fa-external-link-alt me-1"></i>
                            Open
                        </a>
                    </div>
                </div>
            </div>
            {{/actions}}
        </div>
    </div>
    {{/has_manage_capability}}

    <!-- Popular Courses Section -->
    <div class="mb-4">
        <h3 class="mb-3">
            <i class="fas fa-star text-warning me-2"></i>
            Popular Courses
        </h3>
        
        {{#courses}}
        <div class="card mb-3">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h5 class="card-title mb-1">
                            <a href="{{courseurl}}" class="text-decoration-none">
                                {{fullname}}
                            </a>
                        </h5>
                        <p class="text-muted mb-0">
                            <strong>Short name:</strong> {{shortname}}
                        </p>
                    </div>
                    <div class="col-md-2 text-center">
                        <div class="badge bg-info fs-6">
                            <i class="fas fa-users me-1"></i>
                            {{enrollments}} students
                        </div>
                    </div>
                    <div class="col-md-2 text-center">
                        <span class="badge bg-{{status_class}}">
                            {{status_text}}
                        </span>
                    </div>
                    <div class="col-md-2 text-end">
                        {{#has_manage_capability}}
                        <a href="{{editurl}}" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-edit me-1"></i>
                            Edit
                        </a>
                        {{/has_manage_capability}}
                        {{^has_manage_capability}}
                        <a href="{{courseurl}}" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-eye me-1"></i>
                            View
                        </a>
                        {{/has_manage_capability}}
                    </div>
                </div>
            </div>
        </div>
        {{/courses}}
        
        {{^courses}}
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>
            No courses found in the system.
        </div>
        {{/courses}}
    </div>

    <!-- Footer Info -->
    <div class="mt-5">
        <div class="alert alert-light border">
            <div class="row">
                <div class="col-md-6">
                    <h6 class="alert-heading">
                        <i class="fas fa-lightbulb text-warning me-2"></i>
                        Tips
                    </h6>
                    <ul class="mb-0 small">
                        <li>Use course categories to organize your courses</li>
                        <li>Regular backups help protect your course content</li>
                        <li>Monitor enrollment statistics to track course popularity</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h6 class="alert-heading">
                        <i class="fas fa-external-link-alt text-primary me-2"></i>
                        Related Links
                    </h6>
                    <ul class="mb-0 small">
                        <li><a href="/course/management.php">Course and Category Management</a></li>
                        <li><a href="/course/index.php">Browse All Courses</a></li>
                        <li><a href="/backup/restorefile.php">Restore Courses</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>