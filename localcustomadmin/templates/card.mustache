{{!
    @template local_localcustomadmin/card

    Reusable card component for Local Custom Admin plugin.

    Context variables required for this template:
    * title - Card title
    * description - Card description
    * url - Link URL
    * btntext - Button text
    * icon - Icon class (optional)
    * variant - Card variant class (optional, e.g., 'primary', 'secondary')

    Example context:
    {
        "title": "Dashboard",
        "description": "Access the administrative dashboard",
        "url": "/local/localcustomadmin/dashboard.php",
        "btntext": "Open Dashboard",
        "icon": "fa-tachometer-alt",
        "variant": "primary"
    }
}}
<div class="card h-100 shadow-sm {{#variant}}border-{{variant}}{{/variant}}">
    {{#icon}}
    <div class="card-header text-center bg-light">
        <i class="fas {{icon}} fa-2x {{#variant}}text-{{variant}}{{/variant}}{{^variant}}text-primary{{/variant}}"></i>
    </div>
    {{/icon}}
    <div class="card-body d-flex flex-column">
        <h5 class="card-title {{#variant}}text-{{variant}}{{/variant}}">{{title}}</h5>
        <p class="card-text flex-grow-1 text-muted">{{description}}</p>
        <div class="mt-auto">
            <a href="{{url}}" class="btn {{#variant}}btn-{{variant}}{{/variant}}{{^variant}}btn-primary{{/variant}} btn-block">
                <i class="fas fa-arrow-right me-1"></i>
                {{btntext}}
            </a>
        </div>
    </div>
</div>