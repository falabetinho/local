<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fa fa-dollar-sign mr-2 text-primary"></i>
            {{#str}}sync_prices, local_localcustomadmin{{/str}}
        </h2>
        <a href="{{back_to_index_url}}" class="btn btn-outline-secondary">
            <i class="fa fa-arrow-left mr-1"></i>
            {{#str}}back, local_localcustomadmin{{/str}}
        </a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>{{#str}}course, local_localcustomadmin{{/str}}</th>
                <!-- <th>{{#str}}price_name, local_localcustomadmin{{/str}}</th> Removed -->
                <th>{{#str}}price_value, local_localcustomadmin{{/str}}</th>
                <th>{{#str}}installments, local_localcustomadmin{{/str}}</th>
                <th>{{#str}}sync_status, local_localcustomadmin{{/str}}</th>
                <th>{{#str}}last_sync, local_localcustomadmin{{/str}}</th>
                <th>{{#str}}actions, local_localcustomadmin{{/str}}</th>
            </tr>
        </thead>
        <tbody>
            {{#prices}}
            <tr>
                <td>{{course_name}}</td>
                <!-- <td>{{name}}</td> Removed -->
                <td>{{cost}}</td>
                <td>{{installments}}</td>
                <td>
                    {{#sync_status}}
                        {{sync_status}}
                    {{/sync_status}}
                </td>
                <td>{{last_synced}}</td>
                <td>
                    {{#actions.sync}}
                        <a href="process_sync_prices.php?action=sync&priceid={{id}}" class="btn btn-primary btn-sm">
                            <i class="fa fa-cloud-upload-alt"></i> {{#str}}sync_price_button, local_localcustomadmin{{/str}}
                        </a>
                    {{/actions.sync}}
                    {{#actions.update}}
                        <a href="process_sync_prices.php?action=update&priceid={{id}}" class="btn btn-success btn-sm">
                            <i class="fa fa-sync-alt"></i> {{#str}}update_price_button, local_localcustomadmin{{/str}}
                        </a>
                    {{/actions.update}}
                    {{#actions.delete}}
                        <a href="process_sync_prices.php?action=delete&priceid={{id}}" class="btn btn-danger btn-sm">
                            <i class="fa fa-trash"></i> {{#str}}delete_price_button, local_localcustomadmin{{/str}}
                        </a>
                    {{/actions.delete}}
                </td>
            </tr>
            {{/prices}}
        </tbody>
    </table>
</div>